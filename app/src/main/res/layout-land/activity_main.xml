<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <!--androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.constraintlayout.widget.ConstraintLayout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_margin="10sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout1"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose font size:"

                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/radioGroup1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="125dp"
                android:layout_height="150dp"
                android:layout_marginTop="10sp"
                app:layout_constraintStart_toStartOf="@+id/textView1"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                app:layout_constraintVertical_bias="0.5">

                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:text="18sp"
                    app:layout_constraintBottom_toTopOf="@+id/radioButton2"
                    app:layout_constraintStart_toStartOf="@+id/radioGroup1"
                    app:layout_constraintTop_toTopOf="@+id/radioGroup1" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:text="24sp"
                    app:layout_constraintBottom_toTopOf="@+id/radioButton3"
                    app:layout_constraintStart_toStartOf="@+id/radioButton1"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton1" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="125dp"
                    android:layout_height="50dp"
                    android:text="36sp"
                    app:layout_constraintStart_toStartOf="@+id/radioButton2"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton2" />
            </RadioGroup>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="454dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Enter text:"
                android:textSize="24sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />


            <!--android:text="@string/text_ent"-->

            <EditText
                android:id="@+id/userText"
                android:layout_width="407dp"
                android:layout_height="84dp"
                android:layout_marginTop="10sp"
                android:ems="10"
                android:hint="@string/text_ent"

                android:inputType="text"
                app:layout_constraintBottom_toTopOf="@+id/buttonOK"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/buttonOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:text="@string/button_ok"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/userText"
                app:layout_constraintVertical_bias="0.5" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_cancel"
                app:layout_constraintEnd_toEndOf="@+id/userText"
                app:layout_constraintTop_toTopOf="@+id/buttonOK" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>





    <!--LinearLayout
        android:layout_width="728dp"
        android:layout_height="413dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:text="@string/text_ent"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_margin="10sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout1"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>